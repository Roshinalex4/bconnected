		<script type="text/javascript">
			$(function() {
				$('.comments_wrapper_box').hover(function() {
					$(this).find('.bttnhide').fadeIn();
				}, function() {
					$(this).find('.bttnhide').fadeOut();
				});

				$('.bttnhide').click(function(e) {
					if($(this).attr('rel') == 0) {
						$(this).parent().parent().find('.comments_content_main').slideUp();
						$(this).text('Show');
						$(this).attr('rel', 1);
					} else {
						$(this).parent().parent().find('.comments_content_main').slideDown();
						$(this).text('Hide');
						$(this).attr('rel', 0);
					}
				});
			});

