<h2>Join Madison Today</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <%= f.label :first_name, :class=>"text" %>
  <label><%= f.text_field :first_name, :class=>"textbox" %></label>
  
  <%= f.label :last_name, :class=>"text" %>
  <label><%= f.text_field :last_name, :class=>"textbox" %></label>

  <%= f.label :email, :class=>"text" %>
  <label><%= f.email_field :email, :class=>"textbox" %></label>

  <%= f.label :password, :class=>"text" %>
  <label><%= f.password_field :password, :class=>"textbox" %></label>

  <%= f.label "Confirm password", :class=>"text" %>
  <label><%= f.password_field :password_confirmation, :class=>"textbox" %></label>

  <div class="clear"></div>
  <p style="text-align:center;">
	6 or more characters
  </p>
  <label><%= f.submit "", :class=>"btn" %></label>
  <div class="clear"></div>
  <p style="text-align:center;">
	Already on Madison ? <a href="#">Sign In</a>
  </p>
<% end %>
