<% @discussions.each do |discussion| %>
  <tr>
    <td><%= discussion.summary %></td>
    <td><%= discussion.description %></td>
    <td><%= discussion.link %></td>
    <td><%= discussion.user_id %></td>
    <td><%= link_to 'Show', [@group, discussion] %></td>
    <td><%= link_to 'Edit', edit_group_discussion_path(@group, discussion) %></td>
    <td><%= link_to 'Destroy', [@group, discussion], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

