<h1>Listing experiences</h1>

<table>
  <tr>
    <th>Company name</th>
    <th>Company website</th>
    <th>Industry</th>
    <th>Title</th>
    <th>Location</th>
    <th>From month</th>
    <th>To month</th>
    <th>From year</th>
    <th>To year</th>
    <th>Currently work</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @experiences.each do |experience| %>
  <tr>
    <td><%= experience.company_name %></td>
    <td><%= experience.company_website %></td>
    <td><%= experience.industry_id %></td>
    <td><%= experience.title %></td>
    <td><%= experience.location %></td>
    <td><%= experience.from_month %></td>
    <td><%= experience.to_month %></td>
    <td><%= experience.from_year %></td>
    <td><%= experience.to_year %></td>
    <td><%= experience.currently_work %></td>
    <td><%= experience.description %></td>
    <td><%= link_to 'Show', experience %></td>
    <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
    <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

